<table class="table table-striped table-head-fixed text-nowrap">
<thead>
	<tr>
		<th style="width: 10%" >Product ID</th>
		<th style="width: 10%" >Brand</th>
		<th style="width: 10%" >Category</th>
		<th style="width: 10%" >Name</th>
		<th style="width: 10%" >Size</th>
		<th style="width: 15%" >Quantity</th>
		<th style="width: 10%" >Cost Price</th>
		<th style="width: 10%" >Selling Price</th>
		<th style="width: 20%" > </th>
	</tr>
</thead>
<tbody>
	{{#each products}}
	<tr>
	<td>{{this.product_id}}</td>
	<td>{{this.brand}}</td>
	<td>{{this.category}}</td>
	<td>{{this.product_name}}</td>
	<td>{{this.size}}</td>
	<td>
		<div class="progress progress-xs">
		  <div class="progress-bar bg-danger" style="width:{{this.quantity}}%"></div>
		</div>
		<small>{{this.quantity}}</small>
	</td>
	<td>{{this.cost_price}}</td>
	<td>{{this.selling_price}}</td>
	<td class="project-actions text-right">
		<a class="btn btn-info btn-sm" href="/edit/{{this.product_id}}"><i class="fas fa-pencil-alt"></i>Edit</a>
		<a class="btn btn-danger btn-sm" href="/delete/{{this.product_id}}"><i class="fas fa-trash"></i>Delete</a>
	</td>
	</tr>
	{{/each}}

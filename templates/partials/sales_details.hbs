
<table class="table table-striped table-head-fixed text-nowrap">
<thead>
	<tr>
        <th style="width: 6%"></th>
		<th>Purchase Date</th>
		<th style="width: 17%" >Product Id</th>
		<th style="width: 17%" >Unit Price</th>
		<th style="width: 17%" >Quantity</th>
		<th style="width: 17%" >Total Sales(in Rs)</th>
		{{!-- <th style="width: 15%" >Quantity</th>
		<th style="width: 10%" >Cost Price</th>
		<th style="width: 10%" >Selling Price</th> --}}
		<th style="width: 20%" > </th>
	</tr>
</thead>
<tbody>
	{{#each sales}}
	<tr>
        <td style="width:5%"></td>
	<td style="width:19%" align="left">{{this.purchase_date}}</td>
	<td style="width:19%">{{this.product_id}}</td>
	<td style="width:15%">{{this.unit_price}}</td>
		<td style="width:19%">
		<div class="progress progress-xs">
		  <div class="progress-bar bg-blue" style="width:{{this.quantity}}%"></div>
		</div>
		<small>{{this.quantity}}</small>
	</td>
	<td style="width: 19%">{{this.total_sales}}</td>
	<td class="project-actions text-right">
		<a class="btn btn-info btn-sm" href="/sales/edit/{{this.product_id}}"><i class="fas fa-pencil-alt"></i>Edit</a>
		<a class="btn btn-danger btn-sm" href="/sales/delete/{{this.product_id}}"><i class="fas fa-trash"></i>Delete</a>
	</td>
	</tr>
	{{/each}}
</tbody>
</table>
{{>footer}}
